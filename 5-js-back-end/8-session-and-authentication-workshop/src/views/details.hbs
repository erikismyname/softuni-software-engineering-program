<h1>{{cube.name}}</h1>
<img class="cube" src="{{cube.imageUrl}}">
<div class="details">
  <p><span>Author:</span> {{cube.creator}}</p>
  <p><span>Description:</span> {{cube.description}}</p>
  <p><span>Difficulty level:</span> {{cube.difficulty}}</p>
  {{#if cube.isOwner}}
  <a class="btn" href="/products/details/{{cube.id}}/attach">Attach Accessory</a>
  <a class="btn" href="/products/edit/{{cube.id}}">Edit</a>
  <a class="btn" href="/products/delete/{{cube.id}}">Delete</a>
  {{/if}}
  <a class="btn" href="/products">Back</a>
</div>
<div class="accessories">
  {{#each cube.accessories}}
  {{> accessory}}
  {{else}}
  <h3 class="italic">This cube has no accessories yet...</h3>
  {{/each}}
</div>
<div class="details">
  <form action="/comments/{{cube.id}}/create" method="POST">
    <span>Comment:</span><br>
    <textarea name="content" cols="30" rows="10"></textarea>
    <input type="submit" value="Post Comment">
  </form>
  {{#each cube.comments}}
  {{> comment}}
  {{else}}
  <p>No comments yet</p>
  {{/each}}
</div>